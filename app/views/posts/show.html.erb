<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= link_to 'Edit', edit_topic_post_path(@post.topic_id, @post) %>

<div class="jumbotron jumbotron-fluid">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Replies:</th>
        <th colspan="6"></th>
      </tr>
    </thead>
    <tbody>
      <% @post.replies.each do |reply| %>
        <tr>
          <td><%= reply.body %></td>
          <th colspan="3"></th>
          <td><%= link_to 'Edit', edit_topic_post_reply_path(@post.topic_id, @post, reply) %><td>
          <td><%= link_to 'Destroy', topic_post_reply_path(@post.topic_id,@post,reply), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Reply',new_topic_post_reply_path(@post.topic_id,@post) %> |
<%= link_to 'Back', topic_path(@post.topic_id) %>
